<div class="container commsCont">
  <div class="row">
    <div class="col-sm-1"></div>
      <div class="col-sm-10">
        <h3>All Comments:</h3>
        {{!-- {{#each}}  --}}
          <div class="card">
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p>sampleeeee</p>
                {{!-- <p>{{comments.body}}</p> --}}
                <button type="button deleteBtn" class="btn btn-info delComment rounded-0" data-id="{{comments._id}}">Delete Comment</button>
              </blockquote>
            </div>
          </div>
      </div>
    <div class="col-sm-1"></div>  
  </div>
</div>
{{!-- {{/each}}
{{/if}} --}}


