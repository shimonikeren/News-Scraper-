<!-- IF SAVED  -->

<div class="container allCards">
    {{#each article}}
    {{#if this.saved}}
      <a href="{{this.link}}" target="blank">
      <div class="card rounded-0" style="width: 18rem;">
          <img class="card-img-top" src="{{this.imgURL}}" alt="recipe image">
          <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
        </a>
        <button type="button" class="btn btn-secondary unsaveBtn rounded-0" data-id="{{this._id}}">Unsave</button>
        
        {{!--  not yet ready 
        <button type="button" class="btn btn-info comment rounded-0" data-id="{{this._id}}">Comments</button> --}}

        
        </div> <!--end card body-->
    </div> <!--end card-->
    {{/if}}
    {{/each}}
</div> <!--end container-->